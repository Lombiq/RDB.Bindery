@using RDB.Bindery.Models
@using Orchard.ContentManagement

@{
    var settings = WorkContext.CurrentSite.As<BinderyThemeSettingsPart>();
    var selectColorScheme = settings.SelectedColorScheme;

    if (selectColorScheme != "Default") 
    {
        Style.Include(String.Format("ColorSchemes/{0}.min.css", selectColorScheme));
    }
}